@model Occasion
<nav class="navbar sticky-top navbar-default mb-5">
    <a class="navbar-brand"><h2>Welcome to the Activity Center!</h2></a>
    <div class="navbar-brand">
        <a class="navbar-brand" href="Dashboard"> Home </a>
        <a class="navbar-brand" href="logout"> Logout </a>
    </div>
</nav>
<div class="container">
    <h3>Create an Activity!</h3><br>
    <form action="create" method="POST" class='form-horizontal'>
        <div class="form-group">
            <div class="form-group">
                <label>Title</label>
                <input type="text" name="Title" /><br>
                <span asp-validation-for="Title"></span>
            </div>
            <div class="form-group">
                <label>Time</label>
                <input type="time" name="Time" /><br>
                <span asp-validation-for="Time"></span>
            </div>
            <div class="form-group">
                <label>Date</label>
                <input type="date" name="Date" /><br>
                <span asp-validation-for="Date"></span>
            </div>
            <div class="form-group">
                <label>Duration</label>
                <input type="number" name="Duration" /><br>
                <span asp-validation-for="Duration"></span>
            </div>
            <div class="form-group">
                <select name="DurationType">
                    <option>Hours</option>
                    <option>Minutes</option>
                    <option>Days</option>
                </select><br>
                <span asp-validation-for="DurationType"></span>
            </div>
            <div class="form-group">
                <label>Description</label>
                <input type="text" name="Description" /><br>
                <span asp-validation-for="Description"></span>
            </div>
        </div>
        <input type="submit" class="btn btn-primary" value="Create Activity" />
    </form>
</div>